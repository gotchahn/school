<!DOCTYPE html>
<html>
<head>
  <title>Hello</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body>
	<nav class="navbar navbar-inverse">

		<div class="container-fluid">

	    <div class="navbar-header">
	      <a class="navbar-brand" href="#">Rubystudent</a>
	    </div>

	    <ul class="nav navbar-nav">
	    	<li>
					<%= link_to root_path do %>
						<span class="fa fa-home"></span>
						Home
					<% end %>
				</li>
				<% if current_user %>
					<li>
						<%= link_to students_path do %>
							<span class="fa fa-graduation-cap"></span>
							Estudiantes
						<% end %>
						</li>
					<li>
						<%= link_to careers_path do %>
							<span class="fa fa-book"></span>
							Carreras
						<% end %>
					</li>
					<li>
						<%= link_to logout_path, data: {method: :delete} do %>
							<span class="fa fa-sign-out"></span>
							Logout
						<% end %>
					</li>
				<% else %>
					<li>
						<%= link_to login_path do %>
							<span class="fa fa-sign-in"></span>
							Login
						<% end %>
					</li>
				<% end %>
	    </ul>
	  </div>
	</nav>

	<div class="container-fluid">
		
		<% if current_user %>
			<div>Logged in as: <%= current_user.email %></div>
		<% end %>

		<%= yield %>

		<hr>
		<footer>
			<p>2016. Experiencia de Usuario - UNITEC SPS</p>
		</footer>
	</div>

</body>
</html>
