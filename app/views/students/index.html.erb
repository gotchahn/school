
<%= index_title %>
<p><%= index_description %></p>

<% if flash[:notice] %>
	<div style="background: yellow">
		<%= flash[:notice] %>
	</div>
<% end %>

<div>
	<%= form_tag students_path, remote: true, method: :get, class: "js-students-filter form-inline" do %>
		<div class="form-group">
			<%= text_field_tag :q, params[:q], placeholder: "Palabra Clave", class: "form-control" %>
		</div>
		<%= button_tag type: "submit", class: "btn btn-default" do %>
			<span class="fa fa-search"></span>
		<% end %>
	<% end %>
</div>

<hr>

<table border="1" class="table table-striped">
	<thead>
		<tr>
			<th>Id</th>
			<th>Nombre</th>
			<th>Email</th>
			<th>Carrera</th>
		</tr>
	</thead>
	<tbody>
		<%= render @students %>
	</tbody>
</table>

<div class="btn-group" role="group">
	<%= link_to "Agregar Estudiante", new_student_path, class: "btn btn-default" %>
	<%= link_to "Ranking", ranking_students_path, class: "btn btn-default" %>
	<%= link_to "Supremes", supremes_students_path, class: "btn btn-default" %>
</div>

